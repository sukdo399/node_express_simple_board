<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <a href="/write">글 쓰기</a><br><br>
    <table>
      <tr>
        <th>번호</th>
        <th>제목</th>
        <th>작성자</th>
        <th>날짜</th>
        <th>조회수</th>
      </tr>
      <% for(var i = 0; i < data.length; i++) { %>
        <tr>
          <td> <%=max-i%> </td>
          <td> <a href="/read/<%=data[i].num%>/<%=page%>"> <%=data[i].title%> </a></td>
          <td> <%=data[i].writer%> </td>
          <td> <%=data[i].regdate%> </td>
          <td> <%=data[i].hit%> </td>
        </tr>
      <% } %>
    </table>
    <div style="width:46em; text-align:center; padding-top:2px;">
      <% if(page > pageSize) { %>
        [ <a href="/list/1" style="text-decoration: none">◀◀</a> ]
        [ <a href="/list/<%=startPage -1%>" style="text-decoration: none">◀</a> ]
      <% } else { %>
        [ <span style="color: gray">◀◀</span> ]
        [ <span style="color: gray">◀</span> ]
      <% } %>
      &nbsp;&nbsp;

      <% for(var i=startPage; i<=endPage; i++) { %>
        <% if(i == page) { %>
          [ <%=i%> ]
        <% } else { %>
          [ <a href="/list/<%=i%>"> <%=i%> </a> ]
        <% } %>
      <% } %>
      &nbsp;&nbsp;

      <% if(endPage < totalPage) { %>
        [ <a href="/list/<%=endPage +1%>" style="text-decoration: none">▶</a> ]
        [ <a href="/list/<%=totalPage%>" style="text-decoration: none">▶▶</a> ]
      <% } else { %>
        [ <span style="color: gray">▶</span> ]
        [ <span style="color: gray">▶▶</span> ]
      <% } %>

    </div>

  </body>
</html>
